{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
      "quotes": ["error", "double"],
      // we want to force semicolons
      "semi": ["error", "always"],
      // we use 2 spaces to indent our code
      "indent": ["error", 2],
      // we want to avoid extraneous spaces
      "no-multi-spaces": ["error"],
      // we want to avoid trailing whitespaces
      "no-trailing-spaces": ["error"],
      // We want to avoid unused variables
      "@typescript-eslint/no-unused-vars": ["error", { "vars": "all", "ignoreRestSiblings": false }]
    }
}